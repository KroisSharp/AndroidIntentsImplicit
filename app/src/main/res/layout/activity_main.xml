<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dk.easj.anbo.intentsimplicit.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where do you want to go?" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="browseButtonClicked"
        android:text="Web browser" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="phoneButtonClicked"
        android:text="Make call" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="mapButtonClicked"
        android:text="Show map" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="cameraButtonClicked"
        android:text="Camera" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="contactsButtonClicked"
        android:text="Show contacts" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="emailClicked"
        android:text="Email" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="genericClicked"
        android:text="Generic" />

    <TextView
        android:id="@+id/choice_textview_result"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
